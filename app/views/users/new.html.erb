<h1>SIGN UP!!</h1>

<%= flash.now[:errors] %>

<%#= render 'form' %>

<%#= link_to 'Back', users_path %>
<form action="<%= users_url %>" method="post" accept-charset="utf-8">
<input type="hidden"
			 name="authenticity_token"
			 value="<%= form_authenticity_token %>">
	
	<label for="email">Email: </label>
	<input type="text" 
				 name="user[email]" 
				 value="" 
				 id="email" 
				 placeholder="Email">
	
	<label for="password:">Password: </label>
	<input type="password" 
				 name="user[password]" 
				 value="" 
				 id="password" 
				 placeholder="Password">
	
	<p><input type="submit" value="Continue &rarr;"></p>
</form>