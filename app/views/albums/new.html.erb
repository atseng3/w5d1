<h1>Add an Album!</h1>
<%= flash.now[:errors] %>

<form action="<%= band_albums_url %>" method="post" accept-charset="utf-8">
	
<input type="hidden"
			 name="authenticity_token"
			 value="<%= form_authenticity_token %>">
			 
<label for="title">Title</label><input type="text" name="album[title]" value="" id="title">

<select name="album[band_id]" id="album[band_id]" size="1">
	<% Band.all.each do |band| %>
	<option value="<%= band.id %>"><%= band.name %></option>
	<% end %>
</select><br>

<label for="studio">Studio</label>
<input type="radio" name="album[type]" value="studio" id="studio">

<label for="live">Live</label>
<input type="radio" name="album[type]" value="live" id="live">
			 
	<p><input type="submit" value="Continue &rarr;"></p>
</form>